<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dark Theme - Explore</title>
  </head>
  <style>
    /* Dark theme styles */
    body {
      background-color: #121212; /* Dark background */
      color: #ffffff; /* Light text */
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }

    /* Header styling */
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px;
      background-color: #1e1e1e; /* Darker background for header */
      box-shadow: 0 2px 10px rgba(255, 255, 255, 0.1);
    }

    #main-heading {
      margin: 0;
      font-size: 1.8rem;
    }

    /* Search box styling */
    .search-box input {
      height: 2rem;
      padding: 10px;
      border: 1px solid #333;
      border-radius: 5px;
      background-color: #333;
      color: #ffffff;
      outline: none;
    }

    .search-box input::placeholder {
      color: #bbb;
    }

    /* Container for all users */
    .allusercontainer {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); /* Responsive grid */
      gap: 20px;
      padding: 20px;
      background-color: #181818; /* Dark background for the container */
    }

    /* Single user card */
    .user {
      display: flex;
      align-items: center;
      background-color: #222; /* Dark card background */
      border: 1px solid #333;
      border-radius: 10px;
      padding: 15px;
      box-shadow: 0 4px 6px rgba(255, 255, 255, 0.1);
      transition: transform 0.2s ease-in-out;
    }

    /* Hover effect */
    .user:hover {
      transform: translateY(-5px);
    }

    /* Profile picture styling */
    .user img {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      object-fit: cover;
      margin-right: 15px;
      border: 2px solid #4caf50; /* Green border */
    }

    /* User name styling */
    .user h2 {
      font-size: 1.2rem;
      color: #ffffff;
      margin: 0;
      font-weight: 600;
    }

    .user h3 {
      font-size: 1rem;
      color: #bbb; /* Light gray for secondary text */
      margin: 0;
    }

    /* Chat Now button styling */
    .user a {
      margin-left: auto;
      background-color: #4caf50;
      color: #ffffff;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      font-size: 0.9rem;
      cursor: pointer;
      transition: background-color 0.3s ease;
      text-decoration: none;
    }

    .user a button {
      background-color: transparent;
      border: none;
      font-size: 0.9rem;
      color: #ffffff;
    }

    /* Button hover effect */
    .user a:hover {
      background-color: #45a049;
    }
  </style>
  <body>
    <div class="header">
      <h1 id="main-heading">Explore</h1>
      <div class="search-box">
        <input
          type="text"
          placeholder="🔍 Search profiles..."
          id="searchInput"
        />
      </div>
    </div>

    <div class="allusercontainer">
      <% users.forEach(function(user){ %>
      <div class="user">
        <img src="<%= user.profile_pic[0] %>" alt="user profile" />
        <div>
          <h2><%= user.username %></h2>
          <h3>(<%= user.name %>)</h3>
        </div>
        <a href="/chat/<%= user._id %>"><button>Chat Now</button></a>
      </div>
      <% }) %>
    </div>

    <script>
      const inputbar = document.querySelector("#searchInput");

      inputbar.addEventListener("keyup", () => {
        let inputvalue = inputbar.value.trim().toLowerCase();
        let users = document.getElementsByClassName("user");

        for (let user of users) {
          let name = user.querySelector("h2").innerText.toLowerCase();
          user.style.display = name.includes(inputvalue) ? "flex" : "none";
        }
      });
    </script>
  </body>
</html>

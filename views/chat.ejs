<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat Room</title>
    <link rel="stylesheet" href="/styles/chat.css">
</head>
<style>
  /* General Reset */
  body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      background-color: #121212;
      color: #e0e0e0;
      display: flex;
      
  }
  
  /* Main Layout */
  .container {
      display: flex;
      height: 100vh;
      width: 100%;
      max-width: 1200px;
  }
  
  /* Sidebar */
  .sidebar {
      width: 250px;
      background: #1f1f1f;
      color: white;
      padding: 20px;
      display: flex;
      flex-direction: column;
      align-items: center;
  }
  
  .sidebar h2 {
      margin-bottom: 20px;
      color: #00aaff;
  }
  
  .sidebar nav {
      display: flex;
      flex-direction: column;
      width: 100%;
  }
  
  .sidebar a {
      color: white;
      text-decoration: none;
      padding: 10px;
      border-radius: 5px;
      transition: 0.3s;
      background: #282828;
      text-align: center;
  }
  
  .sidebar a:hover {
      background: #00aaff;
  }
  
  /* Chat Container */
  .chat-container {
      flex: 1;
      display: flex;
      flex-direction: column;
      padding-left: 20px;
      background: #181818;
  }
  
  .chat-container h1 {
      text-align: center;
      color: #00aaff;
  }
  
  /* Chat Messages */
  .chat-area {
      flex: 1;
      overflow-y: auto;
      padding: 10px;
      background: #222;
      border-radius: 10px;
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
      display: flex;
      flex-direction: column;
      gap: 10px;
  }
  
  .leftdiv, .rightdiv {
      max-width: 60%;
      padding: 10px;
      border-radius: 10px;
      word-wrap: break-word;
  }
  
  .leftdiv {
      align-self: flex-start;
      background: #333;
      color: white;
  }
  
  .rightdiv {
      align-self: flex-end;
      background: #00aaff;
      color: white;
  }
  
  /* Message Input */
  #message_form {
      display: flex;
      padding: 10px;
      background: #222;
      border-top: 1px solid #333;
      border-radius: 0 0 10px 10px;
  }
  
  #message {
      flex: 1;
      padding: 10px;
      border: 1px solid #444;
      border-radius: 5px;
      background: #181818;
      color: white;
  }
  
  #message:focus {
      outline: none;
      border-color: #00aaff;
  }
  
  button {
      margin-left: 10px;
      padding: 10px 15px;
      border: none;
      background: #00aaff;
      color: white;
      cursor: pointer;
      border-radius: 5px;
  }
  
  button:hover {
      background: #0088cc;
  }
  .chat-header {
    display: flex;
    align-items: center;
    background: #222;
    padding: 10px;
    border-bottom: 1px solid #333;
}

.profile-pic {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    margin-right: 10px;
    object-fit:cover;
}

</style>
<body>

    <!-- Sidebar -->
    <div class="container">
        <div class="sidebar">
            <h2>ChatApp</h2>
            <nav>
                <a href="/dashboard">üè† Home</a>
                <a href="/explore">üîç Explore</a>
                <a href="/profile">üë§ Profile</a>
            </nav>
        </div>
<!-- Chat Header with Recipient Details -->


        <!-- Chat Section -->
        <div class="chat-container">
            <h1>Chat Room</h1>
            <div class="chat-header">
              <img src="<%= recipient.profile_pic %>" alt="Profile Picture" class="profile-pic">
              <h2><%= recipient.name %></h2>
            </div>
            <div class="chat-area" id="messages-div">
              <% chat.messages.forEach((message) => { %>
                  <% if (message.senderId == id) { %>
                      <div class="rightdiv"><%= message.content %></div>
                  <% } else { %>
                      <div class="leftdiv"><%= message.content %></div>
                  <% } %>
              <% }) %>
          </div>
          

            <!-- Message Input -->
            <form id="message_form">
                <input id="message" type="text" placeholder="Type your message..." required />
                <button type="submit">Send</button>
            </form>
        </div>
    </div>

    <!-- Include Socket.IO -->
    <script src="/socket.io/socket.io.js"></script>
    <script>
      // Initialize Socket.IO
      const socket = io();

      // Room ID and User ID from EJS
      const roomId = "<%= chatId %>";
      const loginedUser = "<%= id %>";

      socket.emit("joinRoom", roomId);
      console.log("Joined room:", roomId);

      // Handle incoming messages
      socket.on("message", (msg) => {
    console.log("New message:", msg);

    const messagesDiv = document.getElementById("messages-div");
    const newMessage = document.createElement("div");

    if (msg.senderId == loginedUser) {
        newMessage.className = "rightdiv";
    } else {
        newMessage.className = "leftdiv";
    }

    newMessage.textContent = msg.content;
    messagesDiv.appendChild(newMessage);
    messagesDiv.scrollTop = messagesDiv.scrollHeight;
});


      // Handle message sending
      document.getElementById("message_form").addEventListener("submit", (e) => {
          e.preventDefault();
          const input = document.getElementById("message");

          if (input.value.trim()) {
              socket.emit("chat message", {
                  chatId: roomId,
                  message: input.value,
                  senderId: loginedUser,
              });
              input.value = "";
          }
      });
    </script>
</body>
</html>
